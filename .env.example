# OpenAI API Configuration
REACT_APP_OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: OpenAI Organization ID (if using organization account)
# REACT_APP_OPENAI_ORG_ID=org-your-organization-id

# Application Configuration
REACT_APP_APP_NAME="AI Assessment Trainer"
REACT_APP_VERSION="1.0.0"

# Development Settings
NODE_ENV=development
PORT=3000

# Performance Settings
REACT_APP_MAX_QUESTIONS_PER_SESSION=50
REACT_APP_DEFAULT_EVALUATION_THRESHOLD=70

# Feature Flags
REACT_APP_ENABLE_REALTIME_API=true
REACT_APP_ENABLE_SPEECH_RECOGNITION=true
REACT_APP_ENABLE_TEXT_TO_SPEECH=true
REACT_APP_ENABLE_OFFLINE_MODE=false

# Analytics (Optional)
# REACT_APP_ANALYTICS_ID=your-analytics-id
# REACT_APP_SENTRY_DSN=your-sentry-dsn

# PWA Settings
REACT_APP_PWA_NAME="AI Assessment Trainer"
REACT_APP_PWA_SHORT_NAME="AI Tutor"
REACT_APP_PWA_DESCRIPTION="Practice and improve with voice-powered AI assessment"
REACT_APP_PWA_THEME_COLOR="#2563eb"
REACT_APP_PWA_BACKGROUND_COLOR="#ffffff"
